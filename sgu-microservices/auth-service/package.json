{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Servicio de Autenticaci√≥n - SGU Microservices",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --maxWorkers=50%",
    "test:fast": "jest --maxWorkers=50% --bail --silent",
    "test:coverage": "jest --coverage --maxWorkers=50%",
    "test:watch": "jest --watch",
    "test:db": "node test-db.js",
    "migrate": "node src/migrations/migrate.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:write": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.1",
    "pg": "^8.16.3",
    "redis": "^4.6.10",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "maxWorkers": "50%",
    "cache": true,
    "cacheDirectory": "<rootDir>/.jest-cache",
    "testTimeout": 10000,
    "bail": false,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/migrations/**",
      "!src/config/**"
    ]
  },
  "keywords": [
    "authentication",
    "jwt",
    "microservice",
    "nodejs"
  ],
  "author": "SGU Development Team",
  "license": "MIT"
}
