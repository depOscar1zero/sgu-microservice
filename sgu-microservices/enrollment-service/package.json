{
  "name": "enrollment-service",
  "version": "1.0.0",
  "description": "Servicio de inscripciones para el Sistema de Gesti√≥n Universitaria",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --maxWorkers=50%",
    "test:fast": "jest --maxWorkers=50% --bail --silent",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --maxWorkers=50%",
    "test:strategies": "jest tests/strategies.test.js --maxWorkers=50%",
    "demo:strategy": "node src/demo/strategy-pattern-demo.js",
    "demo:strategy:standalone": "node src/demo/strategy-pattern-demo-standalone.js",
    "demo:strategy:simple": "node src/demo/strategy-pattern-demo-simple.js",
    "test:microservice": "node test-microservice.js",
    "test:strategy-integration": "node test-strategy-integration.js",
    "test:domain": "jest tests/domain/ --maxWorkers=50%",
    "test:ddd": "jest tests/domain/ --verbose --maxWorkers=50%",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format:write": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/"
  },
  "keywords": [
    "microservice",
    "enrollment",
    "university",
    "strategy-pattern",
    "validation"
  ],
  "author": "SGU Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.1",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "maxWorkers": "50%",
    "cache": true,
    "cacheDirectory": "<rootDir>/.jest-cache",
    "testTimeout": 10000,
    "bail": false,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/demo/**",
      "!src/config/**"
    ]
  }
}
