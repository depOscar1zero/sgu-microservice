# Configuración de Base de Datos
DATABASE_URL=postgresql://sgu_user:sgu_password@localhost:5432/sgu_db
MONGODB_URI=mongodb://sgu_admin:sgu_mongo_password@localhost:27017/sgu_notifications?authSource=admin

# Configuración de Redis
REDIS_URL=redis://localhost:6379

# Configuración JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# URLs de Servicios
AUTH_SERVICE_URL=http://localhost:3001
COURSES_SERVICE_URL=http://localhost:3002
ENROLLMENT_SERVICE_URL=http://localhost:3003
PAYMENTS_SERVICE_URL=http://localhost:3004
NOTIFICATIONS_SERVICE_URL=http://localhost:3005

# Configuración de Pagos
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-api-key
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com

# Configuración de Notificaciones
EMAIL_SERVICE_API_KEY=your-email-service-api-key
SMS_SERVICE_API_KEY=your-sms-service-api-key
EMAIL_SERVICE_URL=https://api.email-service.com
SMS_SERVICE_URL=https://api.sms-service.com

# Configuración de AWS (opcional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Configuración de Monitoreo
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001

# Configuración de Logs
LOG_LEVEL=info
LOG_FORMAT=json

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de Seguridad
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Configuración de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configuración de SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
