{
  "name": "sgu-api-gateway",
  "version": "1.0.0",
  "description": "API Gateway para el Sistema de Gesti√≥n Universitaria",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --maxWorkers=50%",
    "test:fast": "jest --maxWorkers=50% --bail --silent",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --maxWorkers=50%",
    "test:decorators": "jest tests/decorators/",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "format:write": "prettier --write src/ tests/"
  },
  "keywords": [
    "sgu",
    "api-gateway",
    "microservices",
    "proxy"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "maxWorkers": "50%",
    "cache": true,
    "cacheDirectory": "<rootDir>/.jest-cache",
    "testTimeout": 10000,
    "bail": false,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/**"
    ]
  }
}
