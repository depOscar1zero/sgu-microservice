---
import Layout from '../layouts/Layout.astro';
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout
  title='Dashboard'
  description='Panel principal del Sistema de Gestión Universitaria'
>
  <div class='space-y-6'>
    <!-- Header del Dashboard -->
    <div class='bg-white rounded-lg shadow-sm border border-gray-200 p-6'>
      <div class='flex items-center justify-between'>
        <div>
          <h1 class='text-2xl font-bold text-gray-900'>Bienvenido al SGU</h1>
          <p class='text-gray-600 mt-1'>Sistema de Gestión Universitaria</p>
        </div>
        <div class='text-right'>
          <p class='text-sm text-gray-500'>Último acceso</p>
          <p id='last-login-time' class='text-sm font-medium text-gray-900'>Cargando...</p>
        </div>
      </div>
    </div>

    <!-- Estadísticas -->
    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6'>
      <!-- Total Cursos -->
      <div class='bg-white rounded-lg shadow-sm border border-gray-200 p-6'>
        <div class='flex items-center'>
          <div class='flex-shrink-0'>
            <div
              class='w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center'
            >
              <svg
                class='w-5 h-5 text-blue-600'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253'
                ></path>
              </svg>
            </div>
          </div>
          <div class='ml-4'>
            <p class='text-sm font-medium text-gray-500'>Cursos Disponibles</p>
            <p class='text-2xl font-bold text-gray-900'>24</p>
          </div>
        </div>
      </div>

      <!-- Inscripciones -->
      <div class='bg-white rounded-lg shadow-sm border border-gray-200 p-6'>
        <div class='flex items-center'>
          <div class='flex-shrink-0'>
            <div
              class='w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center'
            >
              <svg
                class='w-5 h-5 text-green-600'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z'
                ></path>
              </svg>
            </div>
          </div>
          <div class='ml-4'>
            <p class='text-sm font-medium text-gray-500'>Mis Inscripciones</p>
            <p class='text-2xl font-bold text-gray-900'>8</p>
          </div>
        </div>
      </div>

      <!-- Pagos Pendientes -->
      <div class='bg-white rounded-lg shadow-sm border border-gray-200 p-6'>
        <div class='flex items-center'>
          <div class='flex-shrink-0'>
            <div
              class='w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center'
            >
              <svg
                class='w-5 h-5 text-yellow-600'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z'
                ></path>
              </svg>
            </div>
          </div>
          <div class='ml-4'>
            <p class='text-sm font-medium text-gray-500'>Pagos Pendientes</p>
            <p class='text-2xl font-bold text-gray-900'>2</p>
          </div>
        </div>
      </div>

      <!-- Notificaciones -->
      <div class='bg-white rounded-lg shadow-sm border border-gray-200 p-6'>
        <div class='flex items-center'>
          <div class='flex-shrink-0'>
            <div
              class='w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center'
            >
              <svg
                class='w-5 h-5 text-purple-600'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M15 17h5l-5 5v-5zM4 19h6v-6H4v6zM4 5h6V1H4v4zM15 1h5v6h-5V1z'
                ></path>
              </svg>
            </div>
          </div>
          <div class='ml-4'>
            <p class='text-sm font-medium text-gray-500'>Notificaciones</p>
            <p class='text-2xl font-bold text-gray-900'>5</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Contenido Principal -->
    <div class='grid grid-cols-1 lg:grid-cols-2 gap-6'>
      <!-- Cursos Recientes -->
      <div class='bg-white rounded-lg shadow-sm border border-gray-200'>
        <div class='p-6 border-b border-gray-200'>
          <h3 class='text-lg font-semibold text-gray-900'>Cursos Recientes</h3>
        </div>
        <div class='p-6'>
          <div class='space-y-4'>
            <div class='flex items-center justify-between'>
              <div>
                <h4 class='text-sm font-medium text-gray-900'>
                  Programación Web
                </h4>
                <p class='text-sm text-gray-500'>Prof. María García</p>
              </div>
              <span
                class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800'
              >
                Activo
              </span>
            </div>
            <div class='flex items-center justify-between'>
              <div>
                <h4 class='text-sm font-medium text-gray-900'>Base de Datos</h4>
                <p class='text-sm text-gray-500'>Prof. Carlos López</p>
              </div>
              <span
                class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800'
              >
                En Proceso
              </span>
            </div>
            <div class='flex items-center justify-between'>
              <div>
                <h4 class='text-sm font-medium text-gray-900'>Algoritmos</h4>
                <p class='text-sm text-gray-500'>Prof. Ana Martínez</p>
              </div>
              <span
                class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800'
              >
                Pendiente
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Actividad Reciente -->
      <div class='bg-white rounded-lg shadow-sm border border-gray-200'>
        <div class='p-6 border-b border-gray-200'>
          <h3 class='text-lg font-semibold text-gray-900'>
            Actividad Reciente
          </h3>
        </div>
        <div class='p-6'>
          <div class='space-y-4'>
            <div class='flex items-start space-x-3'>
              <div class='flex-shrink-0'>
                <div class='w-2 h-2 bg-green-400 rounded-full mt-2'></div>
              </div>
              <div>
                <p class='text-sm text-gray-900'>Pago procesado exitosamente</p>
                <p class='text-xs text-gray-500'>Hace 2 horas</p>
              </div>
            </div>
            <div class='flex items-start space-x-3'>
              <div class='flex-shrink-0'>
                <div class='w-2 h-2 bg-blue-400 rounded-full mt-2'></div>
              </div>
              <div>
                <p class='text-sm text-gray-900'>Nueva inscripción en curso</p>
                <p class='text-xs text-gray-500'>Hace 1 día</p>
              </div>
            </div>
            <div class='flex items-start space-x-3'>
              <div class='flex-shrink-0'>
                <div class='w-2 h-2 bg-yellow-400 rounded-full mt-2'></div>
              </div>
              <div>
                <p class='text-sm text-gray-900'>
                  Recordatorio de pago pendiente
                </p>
                <p class='text-xs text-gray-500'>Hace 2 días</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>

<script>
  // Función para formatear fecha de último acceso
  function formatLastLogin(dateString) {
    if (!dateString) return 'Nunca';
    
    const lastLogin = new Date(dateString);
    const now = new Date();
    const diffMs = now - lastLogin;
    const diffMins = Math.floor(diffMs / 60000);
    const diffHours = Math.floor(diffMs / 3600000);
    const diffDays = Math.floor(diffMs / 86400000);
    
    // Si es hoy
    if (diffDays === 0) {
      if (diffMins < 1) {
        return 'Hace un momento';
      } else if (diffMins < 60) {
        return `Hace ${diffMins} minuto${diffMins > 1 ? 's' : ''}`;
      } else {
        const hours = lastLogin.getHours();
        const minutes = lastLogin.getMinutes();
        const ampm = hours >= 12 ? 'PM' : 'AM';
        const displayHours = hours % 12 || 12;
        const displayMinutes = minutes.toString().padStart(2, '0');
        return `Hoy, ${displayHours}:${displayMinutes} ${ampm}`;
      }
    }
    // Si es ayer
    else if (diffDays === 1) {
      const hours = lastLogin.getHours();
      const minutes = lastLogin.getMinutes();
      const ampm = hours >= 12 ? 'PM' : 'AM';
      const displayHours = hours % 12 || 12;
      const displayMinutes = minutes.toString().padStart(2, '0');
      return `Ayer, ${displayHours}:${displayMinutes} ${ampm}`;
    }
    // Si es hace más días
    else {
      const day = lastLogin.getDate();
      const month = lastLogin.toLocaleString('es-ES', { month: 'short' });
      const year = lastLogin.getFullYear();
      const currentYear = now.getFullYear();
      
      if (year === currentYear) {
        return `${day} ${month}`;
      } else {
        return `${day} ${month} ${year}`;
      }
    }
  }
  
  // Obtener información del usuario desde el API
  async function loadUserInfo() {
    const token = localStorage.getItem('sgu_auth_token');
    if (!token) return;
    
    try {
      const response = await fetch('http://localhost:3000/api/auth/profile', {
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });
      
      if (response.ok) {
        const data = await response.json();
        const user = data.user || data.data;
        
        // Actualizar último acceso
        if (user.lastLogin) {
          const lastLoginElement = document.getElementById('last-login-time');
          if (lastLoginElement) {
            lastLoginElement.textContent = formatLastLogin(user.lastLogin);
          }
        }
      } else {
        console.error('Error obteniendo perfil:', response.status);
        // Si es error 429 (Too Many Requests), mostrar mensaje apropiado
        const lastLoginElement = document.getElementById('last-login-time');
        if (lastLoginElement) {
          if (response.status === 429) {
            lastLoginElement.textContent = 'Hace un momento';
          } else {
            lastLoginElement.textContent = formatLastLogin(new Date().toISOString());
          }
        }
      }
    } catch (error) {
      console.error('Error cargando información del usuario:', error);
      // Mostrar hora actual como fallback
      const lastLoginElement = document.getElementById('last-login-time');
      if (lastLoginElement) {
        lastLoginElement.textContent = 'Hace un momento';
      }
    }
  }
  
  // Ejecutar cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    loadUserInfo();
  });
</script>
